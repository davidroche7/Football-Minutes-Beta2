// Prisma schema aligned with Football Minutes Beta2

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id        String   @id @default(cuid())
  name      String
  ageGroup  String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  players Player[]
  matches Match[]
}

model Player {
  id                 String       @id
  teamId             String
  team               Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  displayName        String
  squadNumber        Int?
  status             PlayerStatus @default(ACTIVE)
  preferredPositions String[]     @default([])
  notes              String?
  removedAt          DateTime?
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  matches     MatchPlayer[]
  matchAwards MatchAward[]

  @@unique([teamId, displayName])
  @@index([teamId])
}

model Match {
  id          String      @id
  teamId      String
  team        Team        @relation(fields: [teamId], references: [id], onDelete: Cascade)
  fixtureDate DateTime
  opponent    String
  venue       VenueType   @default(HOME)
  status      MatchStatus @default(DRAFT)
  allocation  Json
  result      Json?
  editHistory Json?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  players MatchPlayer[]
  awards  MatchAward[]

  @@index([teamId, fixtureDate])
}

model MatchPlayer {
  id       String    @id @default(cuid())
  matchId  String
  playerId String
  role     SquadRole @default(STARTER)

  minutes   Int      @default(0)
  positions String[] @default([])

  match  Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([matchId, playerId])
  @@index([playerId])
}

model MatchAward {
  id       String    @id @default(cuid())
  matchId  String
  playerId String?
  type     AwardType
  count    Int       @default(1)

  match  Match   @relation(fields: [matchId], references: [id], onDelete: Cascade)
  player Player? @relation(fields: [playerId], references: [id], onDelete: SetNull)

  @@index([matchId])
}

enum VenueType {
  HOME
  AWAY
  NEUTRAL
}

enum MatchStatus {
  DRAFT
  CONFIRMED
  FINAL
}

enum PlayerStatus {
  ACTIVE
  INACTIVE
  TRIALIST
}

enum SquadRole {
  STARTER
  BENCH
}

enum AwardType {
  SCORER
  HONORABLE_MENTION
  ASSIST
}
